---
import Layout from "../layouts/Layout.astro";


---

<head>
   
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .glass {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        /* Hero section background image */
        .bg-hero {
            background-image: url('vegasbackground.jpg'); /* Replace with your image URL */
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<Layout title="Home page">


<body class="bg-gray-900 text-gray-100">
    <!-- Navbar -->
   
<!-- Hero Section with Background Image -->
<section class="relative text-center py-24 bg-hero h-screen bg-gradient-to-r from-gray-800 to-gray-900 mt-16" style="background-image: url('pastries.jpg');">
    <div class="absolute inset-0 bg-gray-900 bg-opacity-60"></div> <!-- Overlay to darken the background image -->
    <div class="relative z-10">
        <h1 class="text-6xl md:text-7xl font-bold text-white mt-32 mb-6">Welcome to Breakfast Royale</h1>
        <p class="text-2xl md:text-3xl text-gray-300 max-w-xl mx-auto mb-8">
            Discover world-class breakfast recipes to elevate your mornings.
        </p>
        <a href="/breakfast-recipes"> <!-- Change the href to your desired URL -->
            <button class="mt-8 bg-gradient-to-r text-4xl from-gray-700 to-gray-600 text-white  py-8 px-32 rounded-full  font-semibold transition-transform transform hover:scale-105 hover:bg-opacity-80">
                Explore Recipes
            </button>
        </a>
    </div>
</section>


    <!-- Introduction Section -->
 

    <script>
        // Mobile menu toggle
        document.getElementById('menu-btn').addEventListener('click', function () {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</Layout>
</html>
